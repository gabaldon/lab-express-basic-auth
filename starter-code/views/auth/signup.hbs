<main class="signup">
    <h1>Regístrate</h1>
    {{#if errMsg}}
    <div class="error">{{errMsg}}</div>
    {{/if}}
    <form class="signup-form" method="POST" action="/user/signup">
        <label>Nombre de usuario:<input type="text" name="username" placeholder="Nombre"></label>
        <label>Contraseña:<input type="password" name="password" placeholder="********"></label>
        <button type="submit">Enviar</button>
    </form>
    <a></a>
</main>